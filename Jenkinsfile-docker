pipeline {
    agent {
        node {
            label 't056-runner'
        }
    }

    stages {
        stage('Checkout') {
            steps {
                git credentialsId: 'ca-git-access', branch: 'development', url: "https://git.cloudavise.com/visops/t056/sample-java-app.git"
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('prepare') {
            steps {
                sh "ansible-vault decrypt --vault-id /tmp/vault_id demo.pem"
                sh "chmod 400 demo.pem"
                sh "chmod +x deploy_script.sh"
                sh "./deploy_script.sh docker-prepare"
            }
        }
        stage('deploy') {
            steps {
                sh "./deploy_script.sh docker-deploy"
            }
        }
    }
}